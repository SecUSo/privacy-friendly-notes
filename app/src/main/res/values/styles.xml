<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorSurfaceSecondary">@color/colorSurface</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:actionModeBackground">@color/colorBackgroundDark</item>

        <item name="colorNavbarHeaderBackground">@color/colorAccent</item>
        <item name="colorNavbarHeaderSurface">@color/colorSurface</item>
        <item name="colorNavbarHeaderText">@color/colorAccent</item>

        <item name="colorIconFill">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Note.Header.Category" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />
    <style name="AppTheme.Note.Header.Title" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />
    <style name="AppTheme.Note.ColorSelector" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <!-- FAB library -->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
